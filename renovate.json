{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],

  "includePaths": ["helm-values-in-one-dir/values.Production.yaml"],

  "helm-values": {
    "fileMatch": ["helm-values-in-one-dir/values.Production.yaml"]
  },

  "kubernetes": {
    "fileMatch": ["(^|/)[^/]*\\.yaml$"]
  },

  "separateMinorPatch": true,
  "additionalBranchPrefix": "{{packageFile}}-",

  "packageRules": [
    {
      "matchFileNames": ["helm-values-in-one-dir/values.Production.yaml"],
      "allowedVersions": "1.14.2"
    }
  ]
}
